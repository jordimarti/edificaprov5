<%= render ("layouts/dashboard") %>
  
  <div class="py-6">
    <div class="max-w-3xl mx-auto sm:px-6 lg:max-w-7xl lg:grid lg:grid-cols-12 lg:gap-8">
      <div class="hidden lg:block lg:col-span-3">
        <%= render ("layouts/dashboard_menu") %>
      </div>
      <main class="lg:col-span-9">
        <div class="flex items-center space-x-5">
          <div>
            <h1 class="font-bold text-2xl"><%= t('.title_courses') %></h1>
          </div>
        </div>
        <div class="mt-6 flex flex-col-reverse justify-stretch space-y-4 space-y-reverse sm:flex-row-reverse sm:justify-end sm:space-x-reverse sm:space-y-0 sm:space-x-3 md:mt-0 md:flex-row md:space-x-3">
          <%= link_to t('.new_course'), new_course_path, class: "inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-blue-500 cursor-pointer" %>
        </div>

        <% @courses.each do |course| %>
          <div class="border-b py-4">
            <%= link_to course.title, edit_course_path(course), class: "hover:text-gray-600" %>
          </div>
        <% end %>
      </main>
    </div>
  </div>
</div>