<% 
user = User.find(account_affiliation.user_id) 
personal_account = AccountAffiliation.find_by(user_id: user.id, role: "user")
account = Account.find(personal_account.account_id)
%>
<%= turbo_frame_tag dom_id(account_affiliation) do %>
  <% link_to account_affiliations_info_path(id: account_affiliation.id) do %>
    <div class="flex items-center space-x-3 px-4 py-3 hover:bg-gray-100 border-b">
      <div>
        <div class="flex-shrink-0">
          <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
        </div>
      </div>
      <div>
        <div>
          <span class="text-base font-bold mr-4"><%= user.first_name %> <%= user.last_name %></span>
        </div>
        <div class="flex text-gray-600 text-sm">
          <div>@<%= account.username %></div> 
          <% if account_affiliation.role == "admin" %>
            <div class="bg-gray-400 rounded-full px-2 text-white ml-2">admin</div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>